@model List<AstanaCheTamBrat.DB.Models.Category>
@{
    ViewBag.Title = "categories";
    Layout = "~/Views/Shared/CabinetPagesMasterLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h4 class="panel-title">Используемые Вами категории товаров и услуг</h4>
        <p>На данной странице показанный категории товаров и услуг в которых имеются Ваши товары</p>
    </div>
    <div class="panel-body">
        <table id="dataTable1" class="table table-bordered table-striped-col">
            <thead>
                <tr>
                    <th>Наименование категории</th>
                    <th>Число товаров в категории</th>
                    <th>Действия</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Наименование категории</th>
                    <th>Число товаров в категории</th>
                    <th>Действия</th>
                </tr>
            </tfoot>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    
                    <tr>
                        <td>@Model[i].category_name</td>
                        <td>0</td>
                        <td><a href="#" class="btn-info">Добавить товар</a></td>
                    </tr>
                                        
                }

                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="3">
                            <p>У Вас нет ни одной используемой категории, для того, чтобы они появились <a href="/provider/add_product" class="btn btn-success">добавьте товары</a></p>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

